<UserControl x:Class="WorldWarX.Views.CountrySelectionControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d"
             d:DesignHeight="600" d:DesignWidth="900">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="1.5*"/>
        </Grid.ColumnDefinitions>

        <!-- Country List Panel -->
        <Border Grid.Column="0" 
                Background="#0F0F1A" 
                Margin="10" 
                CornerRadius="5"
                BorderThickness="1"
                BorderBrush="#61DAFB">
            <DockPanel>
                <TextBlock Text="SELECT YOUR COUNTRY" 
                           DockPanel.Dock="Top" 
                           Foreground="#F73859" 
                           FontSize="22" 
                           FontWeight="Bold"
                           Margin="10"
                           HorizontalAlignment="Center"/>

                <StackPanel DockPanel.Dock="Bottom" Margin="10">
                    <Button x:Name="BtnSelectCountry" 
                            Content="CHOOSE COUNTRY" 
                            Height="50"
                            Margin="0,10,0,5"
                            Background="#F73859"
                            Foreground="White"
                            FontSize="18"
                            FontWeight="Bold"
                            IsEnabled="False"
                            Click="BtnSelectCountry_Click"/>
                    
                    <Button x:Name="BtnBack" 
                            Content="BACK" 
                            Height="40"
                            Margin="0,5,0,0"
                            Background="#4D4D65"
                            Foreground="White"
                            FontSize="16"
                            Click="BtnBack_Click"/>
                </StackPanel>
                
                <ListView x:Name="CountryListView"
                          Background="Transparent"
                          BorderThickness="0"
                          Foreground="White"
                          Margin="5"
                          SelectionChanged="CountryListView_SelectionChanged">
                    <ListView.ItemTemplate>
                        <DataTemplate>
                            <Border Background="#2D2D3A" 
                                    Margin="2" 
                                    Padding="10" 
                                    CornerRadius="5" 
                                    Width="230">
                                <StackPanel Orientation="Horizontal">
                                    <Border Width="40" 
                                            Height="40" 
                                            BorderThickness="1" 
                                            BorderBrush="White" 
                                            Margin="0,0,10,0">
                                        <Border.Background>
                                            <SolidColorBrush Color="{Binding PrimaryColor}"/>
                                        </Border.Background>
                                    </Border>
                                    <TextBlock Text="{Binding Name}" 
                                               Foreground="White" 
                                               FontSize="18" 
                                               FontWeight="SemiBold"
                                               VerticalAlignment="Center"/>
                                </StackPanel>
                            </Border>
                        </DataTemplate>
                    </ListView.ItemTemplate>
                </ListView>
            </DockPanel>
        </Border>

        <!-- Country Details Panel -->
        <Border Grid.Column="1" 
                Background="#0F0F1A" 
                Margin="10" 
                CornerRadius="5"
                BorderThickness="1"
                BorderBrush="#61DAFB">
            <DockPanel>
                <TextBlock Text="COUNTRY DETAILS" 
                           DockPanel.Dock="Top" 
                           Foreground="#61DAFB" 
                           FontSize="22" 
                           FontWeight="Bold"
                           Margin="10"
                           HorizontalAlignment="Center"/>

                <ScrollViewer DockPanel.Dock="Top" VerticalScrollBarVisibility="Auto">
                    <StackPanel Margin="15">
                        <!-- Country Name -->
                        <TextBlock x:Name="CountryNameText"
                                   Text="Select a country"
                                   Foreground="White"
                                   FontSize="28"
                                   FontWeight="Bold"
                                   HorizontalAlignment="Center"
                                   Margin="0,0,0,20"/>
                        
                        <!-- Country Description -->
                        <TextBlock Text="DESCRIPTION" 
                                  Foreground="#F73859" 
                                  FontSize="16" 
                                  FontWeight="Bold"
                                  Margin="0,5,0,5"/>
                        
                        <Border Background="#2D2D3A" Padding="10" CornerRadius="5">
                            <TextBlock x:Name="CountryDescriptionText"
                                      Text="Country description will appear here."
                                      Foreground="White"
                                      FontSize="14"
                                      TextWrapping="Wrap"/>
                        </Border>
                        
                        <!-- Country Power -->
                        <TextBlock Text="COUNTRY POWER" 
                                  Foreground="#F73859" 
                                  FontSize="16" 
                                  FontWeight="Bold"
                                  Margin="0,20,0,5"/>
                        
                        <Border Background="#2D2D3A" Padding="10" CornerRadius="5">
                            <StackPanel>
                                <TextBlock x:Name="PowerNameText"
                                          Text="Power Name"
                                          Foreground="#61DAFB"
                                          FontSize="18"
                                          FontWeight="Bold"
                                          Margin="0,0,0,5"/>
                                          
                                <TextBlock x:Name="PowerDescriptionText"
                                          Text="Power description will appear here."
                                          Foreground="White"
                                          FontSize="14"
                                          TextWrapping="Wrap"/>
                            </StackPanel>
                        </Border>
                        
                        <!-- Country Bonuses -->
                        <TextBlock Text="COUNTRY BONUSES" 
                                  Foreground="#F73859" 
                                  FontSize="16" 
                                  FontWeight="Bold"
                                  Margin="0,20,0,5"/>
                        
                        <Border Background="#2D2D3A" Padding="10" CornerRadius="5">
                            <ListBox x:Name="BonusesList"
                                    Background="Transparent"
                                    BorderThickness="0"
                                    Foreground="White"
                                    FontSize="14"
                                    MaxHeight="150"/>
                        </Border>
                    </StackPanel>
                </ScrollViewer>
            </DockPanel>
        </Border>
    </Grid>
</UserControl>